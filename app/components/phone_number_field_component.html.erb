<div>
  <%= f.label name, class: "block text-sm font-medium text-gray-700" %>
  <div class="relative mt-1 rounded-md">
    <%= f.phone_number_field name, className: "grid grid-cols-1 gap-y-2 gap-x-4 sm:grid-cols-6" %>
    <% if errors.present? %>
      <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
        <!-- Heroicon name: solid/exclamation-circle -->
        <svg class="w-5 h-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
      </div>
    <% end %>
  </div>
  <% if errors.present? %>
    <p class="mt-2 text-sm text-red-600" id="email-error"><%= errors.join(" ") %></p>
  <% end %>
</div>

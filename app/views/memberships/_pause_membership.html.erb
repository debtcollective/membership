<div class="flex items-center justify-between w-full flex-col sm:flex-row">
  <div class="w-full">
    <p class="text-2xl font-black">
      Pause your membership
    </p>
    <p class="mt-2 text-gray-500 text-md">
      You won't be charged again until you resume your subscription.
    </p>
  </div>
  <div class="submit-btn-container py-3 text-right sm:px-6 w-full sm:max-w-max">
    <%= form_with(model: @membership, url: pause_membership_path, builder: ApplicationFormBuilder, local: true) do |f| %>
      <%= f.submit 'Pause membership',
        class: "w-full sm:max-w-max inline-flex justify-center px-4 py-2 text-lg sm:text-sm font-medium text-white bg-gray-800 border border-transparent rounded-md shadow-sm hover:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900",
        data: { confirm: 'Are you sure?' }
      %>
    <% end %>
  </div>
</div>

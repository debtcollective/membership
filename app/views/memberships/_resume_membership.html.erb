<div class="w-full flex flex-col sm:flex-row justify-between sm:justify-between sm:items-center">
  <p class="max-w-4xl font-black text-gray-900 leading-loose" style="font-size:1.75rem">Your membership is</p>
  <div class="flex items-center items-end">
    <span class="sm:max-w-max inline-flex bg-transparent border-none underline hover:no-underline justify-center px-2 py-4 text-md sm:text-lg font-thin focus:outline-none">
      Inactive
    </span>
    <%= form_with(model: @membership, url: resume_membership_path, builder: ApplicationFormBuilder, local: true) do |f| %>
      <%= f.submit 'Resume subscription',
        class: "update-status inline-flex justify-center px-4 py-2 font-bold text-white text-md ml-2 sm:max-w-max",
        data: { confirm: 'Are you sure?' }
      %>
    <% end %>
  </div>
</div>

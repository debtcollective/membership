<div class="membership content mb-20 md:-ml-4">
  <div class="pb-5 border-b border-gray-200">
    <h3 class="font-black text-black text-4xl sm:text-6xl">
      Membership
    </h3>
    <p class="max-w-2xl mt-2 text-xl sm:text-2xl font-thin mt-4 mb-10 leading-normal" style="color:#232323">Make changes to your membership! If you need additional assistance please <a href="https://debtcollective.org/contact-us/" target="_blank" class="email-link underline" style="color: #1e9981;">send us a message via our contact form.</a>
    </p>
  </div>

  <!-- Membership -->
  <% if @membership.present? %>

  <section aria-labelledby="membership_status">
    <div class="mt-10">
      <% if @membership.paused? %>
        <%= render "resume_membership" %>
      <% else %>
        <%= render "pause_membership" %>
      <% end %>
    </div>
  </section>

  <section aria-labelledby="membership_amount">
    <div class="mt-8">
      <div class="flex flex-col sm:flex-row items-start justify-between">
        <p class="font-black text-gray-900 leading-tight sm:w-1/2  sm:mr-3" style="font-size:1.75rem">Your current monthly donation amount is</p>
        <%= render 'edit_amount_form', membership: @membership %>
      </div>

      <% if @membership.active? %>
      <p class="max-w-4xl mt-2 text-gray-900 text-md">Your next payment is due on <%= @membership&.next_payment_due_at.strftime("%b, %e") %></p>
      <% end %>
    </div>
  </section>

  <section aria-labelledby="membership_credit_card">
    <div class="mt-10">
      <%= render 'edit_card', membership: @membership %>
    </div>
  </section>

  <% else %>
  <section aria-labelledby="membership_amount">
    <div class="mt-8">
      <p class="max-w-4xl mt-2 text-lg text-gray-900">You haven't started your membership. <a class="font-medium text-blue-700 hover:text-blue-600" href="<%= "#{ENV["HOME_PAGE_URL"]}/debt-union" %>">Click here to start one.</a></p>
    </div>
  </section>
  <% end %>
</div>
